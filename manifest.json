{
  "manifest_version": 3,
  "name": "Anime Discord Presence",
  "version": "1.0.0",
  "description": "Show what anime you're watching on Crunchyroll as Discord Rich Presence with progress tracking and customization.",
  "permissions": [
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://*.crunchyroll.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.crunchyroll.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": ["*://static.crunchyroll.com/*", "*://*.vrv.co/*", "*://*.crunchyroll.com/*"],
      "js": ["iframe-inject.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  }
}
